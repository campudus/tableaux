{
  //###########################
  //########## user ###########
  //###########################

  "create-table": [
    {
      "type": "grant",
      "action": ["create", "delete", "view"],
      "scope": "table"
    }
  ],
  "view-table": [
    {
      "type": "grant",
      "action": [
        "viewTable"
      ],
      "condition": {
        "table": {
          "hidden": "false"
        }
      }
    }
  ],
  "view-hidden-table": [
    {
      "type": "grant",
      "action": [
        "viewTable"
      ],
      "condition": {
        "table": {
          "hidden": "true"
        }
      }
    }
  ],
  "create-row": [
    {
      "type": "grant",
      "action": [
        "createRow"
      ],
      "condition": {
        "table": {
          "tableType": "generic"
        }
      }
    }
  ],
  "delete-row": [
    {
      "type": "grant",
      "action": [
        "deleteRow"
      ],
      "condition": {
        "table": {
          "tableType": "generic"
        }
      }
    }
  ],
  "create-row-setting-table": [
    {
      "type": "grant",
      "action": [
        "createRow"
      ],
      "condition": {
        "table": {
          "tableType": "settings"
        }
      }
    }
  ],
  "delete-row-setting-table": [
    {
      "type": "grant",
      "action": [
        "deleteRow"
      ],
      "condition": {
        "table": {
          "tableType": "settings"
        }
      }
    }
  ],
  "change-table-display": [
    {
      "type": "grant",
      "action": [
        "editTableDisplayProperty"
      ]
    }
  ],
  "change-column-display": [
    {
      "type": "grant",
      "action": [
        "editColumnDisplayProperty"
      ]
    }
  ],
  "view-column": [
    {
      "type": "grant",
      "action": [
        "viewColumn"
      ]
    }
  ],
  "change-media": [
    {
      "type": "grant",
      "action": [
        "createMedia",
        "editMedia",
        "deleteMedia"
      ]
    }
  ],
  "change-annotation": [
    {
      "type": "grant",
      "action": [
        "editCellAnnotation",
        "editRowAnnotation"
      ]
    }
  ],
  "view-cell-value": [
    {
      "type": "grant",
      "action": [
        "viewCellValue"
      ]
    }
  ],
  "edit-single-language-cell-value": [
    {
      "type": "grant",
      "action": [
        "editCellValue"
      ],
      "condition": {
        "column": {
          "multilanguage": "false"
        }
      }
    }
  ],
  "edit-multi-language-cell-value": [
    {
      "type": "grant",
      "action": [
        "editCellValue"
      ],
      "condition": {
        "column": {
          "multilanguage": "true"
        }
      }
    }
  ],
  "edit-cell-value-de": [
    {
      "type": "grant",
      "action": [
        "editCellValue"
      ],
      "condition": {
        "column": {
          "multilanguage": "true"
        },
        "langtag": "de-DE"
      }
    }
  ],
  "edit-cell-value-en": [
    {
      "type": "grant",
      "action": [
        "editCellValue"
      ],
      "condition": {
        "column": {
          "multilanguage": "true"
        },
        "langtag": "en-GB"
      }
    }
  ],
  "view-service": [
    {
      "type": "grant",
      "action": [
        "viewService"
      ]
    }
  ],
  //###########################
  //#### admin - developer ####
  //###########################
  "change-system": [
    {
      "type": "grant",
      "action": [
        "editSystem"
      ]
    }
  ],
  "change-table-group": [
    {
      "type": "grant",
      "action": [
        "createTableGroup",
        "editTableGroup",
        "deleteTableGroup"
      ]
    }
  ],
  "create-media": [
    {
      "type": "grant",
      "action": ["create"],
      "scope": "media"
    }
  ],
  "change-service": [
    {
      "type": "grant",
      "action": [
        "createService",
        "viewService",
        "deleteService",
        "editServiceStructureProperty",
        "editServiceDisplayProperty"
      ]
    }
  ],
  // shortcut role to get all available permissions
  "dev": [
    {
      "type": "grant",
      "action": [
        "createTable",
        "viewTable",
        "deleteTable",
        "editTableDisplayProperty",
        "createRow",
        "deleteRow",
        "editTableStructureProperty",
        "editCellAnnotation",
        "editRowAnnotation",
        "createColumn",
        "viewColumn",
        "deleteColumn",
        "editColumnStructureProperty",
        "editColumnDisplayProperty",
        "viewCellValue",
        "editCellValue",
        "editSystem",
        "createTableGroup",
        "editTableGroup",
        "deleteTableGroup",
        "createService",
        "viewService",
        "deleteService",
        "editServiceStructureProperty",
        "editServiceDisplayProperty",
        "createMedia",
        "editMedia",
        "deleteMedia"
      ]
    }
  ]
}
